@model CategoryModel;

<div class="rounded-2 shadow p-3">
	<h2 class="text-center"> @(Model != null ?  "Edit" : "Add new")  Category</h2>


	<form method="post">
		<input asp-for="CategoryId" hidden />
		<div class="mb-2">
			<label asp-for="CategoryName"></label>
			<input asp-for="CategoryName" class="form-control" />
			<span asp-validation-for="CategoryName" class="text-danger"></span>
		</div>

		<div class="row mt-3">
			<div class="col-3 mt-6">
				<button type="submit" class="btn btn-primary form-control">@(Model != null ? "Edit" : "Add")</button>
			</div>
			<a asp-action="CategoryList" class="btn  btn-outline-info col-3">Back</a>

		</div>
	</form>
</div>

@section Scripts {
	
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}