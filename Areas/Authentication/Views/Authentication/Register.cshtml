@model bulkyApp.Models.UserModel;
@{
	ViewData["Title"] = "Register";
}


<div class="row card">
	<div class="card-header bg-secondary bg-gradient">
		<h3 class="text-light text-center">Register</h3>
	</div>

	<form method="post">

		<div class="card-body">
			@if (TempData["AlredyExit"] != null)
			{
				<div class="alert alert-danger d-flex align-items-center" role="alert">
					<div>
						<i class="bi bi-exclamation-triangle-fill"></i> @TempData["AlredyExit"]
					</div>
				</div>
			}
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="ConformPassword"></label>
				<input asp-for="ConformPassword" class="form-control" />
				<span asp-validation-for="ConformPassword" class="text-danger"></span>
			</div>


			<div class="mb-3 ">
				<input type="submit" class="btn btn-primary col-md-12 col-lg-4" value="Register" />
			</div>
			<a asp-action="LogIn">Alredy have account</a>
		</div>
	</form>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}