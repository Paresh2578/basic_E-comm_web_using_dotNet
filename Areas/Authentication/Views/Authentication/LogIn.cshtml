@model bulkyApp.Models.UserModel;
@{
	ViewData["Title"] = "Log In";
}


<div class="row card">
	<div class="card-header bg-secondary bg-gradient">
		<h3 class="text-light text-center">LogIn</h3>
	</div>

	<form method="post">
		<div class="card-body">
			@if (TempData["Invalid"] != null)
			{
				<div asp-validation-summary=All class="alert alert-danger d-flex align-items-center" role="alert">
					<i class="bi bi-exclamation-triangle-fill"></i> @TempData["Invalid"]
				</div>
			}


			<div class="mb-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<a asp-action="forgetPass" class="mb-3">Forget password</a>

			<div class="mb-3 ">
				<input type="submit" class="btn btn-primary col-md-12 col-lg-4" value="Log In" />
			</div>
			<a asp-action="Register">Don't have account</a>
		</div>
	</form>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}